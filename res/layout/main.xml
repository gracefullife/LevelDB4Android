<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout1" android:layout_width="fill_parent" android:background="#5050cc">
        <TextView android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10px" android:text="@string/app_name"></TextView>
    </LinearLayout>
    <LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/linearLayout4" android:orientation="vertical" android:paddingTop="10px">
        <TextView android:id="@+id/textView5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Database Information"></TextView>
        <LinearLayout android:layout_height="fill_parent" android:id="@+id/linearLayout9" android:orientation="vertical" android:layout_width="fill_parent" android:background="@drawable/box">
            <TableLayout android:layout_height="fill_parent" android:id="@+id/tableLayout1" android:layout_width="fill_parent">
                <TableRow android:id="@+id/tableRow1" android:layout_height="wrap_content" android:layout_margin="10px" android:layout_width="fill_parent">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Version" android:layout_margin="4px" android:id="@+id/textView10"></TextView>
                    <TextView android:text="TextView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="4px" android:id="@+id/tvVersion"></TextView>
                </TableRow>
            </TableLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/linearLayout10" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:layout_margin="8px" android:layout_height="wrap_content" android:id="@+id/textView7" android:layout_width="wrap_content" android:text="Statistic"></TextView>
                <TextView android:layout_margin="8px" android:layout_height="wrap_content" android:text="TextView" android:id="@+id/tvStats" android:layout_width="wrap_content"></TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/linearLayout3" android:orientation="vertical" android:paddingTop="10px">
        <TextView android:layout_height="wrap_content" android:text="Operation" android:id="@+id/textView4" android:layout_width="wrap_content"></TextView>
        <LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="vertical" android:id="@+id/linearLayout8" android:padding="10px" android:background="@drawable/box">
            <LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="vertical" android:id="@+id/linearLayout2">
                <TextView android:layout_height="wrap_content" android:text="TextView" android:id="@+id/textView2" android:layout_width="wrap_content"></TextView>
                <LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/linearLayout5">
                    <Button android:layout_weight="1" android:text="Button" android:layout_height="wrap_content" android:id="@+id/button1" android:layout_width="fill_parent"></Button>
                    <Button android:layout_weight="1" android:text="Button" android:layout_height="wrap_content" android:id="@+id/button2" android:layout_width="fill_parent"></Button>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="vertical" android:id="@+id/linearLayout6">
                <TextView android:layout_height="wrap_content" android:text="TextView" android:id="@+id/textView3" android:layout_width="wrap_content"></TextView>
                <LinearLayout android:layout_height="fill_parent" android:layout_width="fill_parent" android:id="@+id/linearLayout7">
                    <Button android:layout_weight="1" android:layout_margin="10px" android:text="Button" android:layout_height="wrap_content" android:id="@+id/button3" android:layout_width="fill_parent"></Button>
                    <Button android:layout_weight="1" android:layout_margin="10px" android:text="Button" android:layout_height="wrap_content" android:id="@+id/button4" android:layout_width="fill_parent"></Button>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
